@model TodoList_Codnity.Models.TodoList

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Task</h1>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCompleted)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsCompleted)
            {
                <div class="form-check">
                    <input style="opacity:1" class="form-check-input" type="checkbox" checked="checked" disabled id="completedCheckbox@(Model.Id)">
                    <label style="opacity:1" class="form-check-label" for="completedCheckbox@(Model.Id)">
                        Completed
                    </label>
                </div>
            }
            else
            {
                <div class="form-check">
                    <input style="opacity:1" class="form-check-input is-invalid" type="checkbox" checked="checked" disabled id="completedCheckbox@(Model.Id)">
                    <label style="opacity:1" class="form-check-label" for="completedCheckbox@(Model.Id)">
                        Not Done
                    </label>
                </div>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>